@*@model notesCode_ASP_NET_MVC.Models.LoginModel*@

<div class="hidden_login">
        <div>
            @using (Ajax.BeginForm("Login", "Account", new AjaxOptions { OnSuccess = "UpdateHeader" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "")

                @Html.TextBox("UserName", null, new {  placeholder = "Login"  })
                @Html.ValidationMessage("UserName", null, new { style = "color:red;" })

                @Html.Password("Password",null, new {  placeholder = "Password"  })
                @Html.ValidationMessage("Password", null, new { style = "color:red;" })

                <button type="submit">Log in</button>
            }
            @Html.ActionLink("Sign Up", "Register", "Account")
        </div>
        <img src="../../Content/img/close2.png" id="close">
</div>